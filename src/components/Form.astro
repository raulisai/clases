<div class="row">
    <h1>Bienvenido</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <!-- Contenido del lado izquierdo (mapa) -->
        <div id="map"></div>
    </div>
    <div class="col-md-6">
        <!-- Contenido del lado derecho (formulario) -->
        <form>
            <div class="">
                <div class="w-100">
                    <input
                        type="text"
                        class="form-control"
                        placeholder="Nombre"
                        aria-label="First name"
                    />
                </div>
            </div>
            <div class="row">
                <div class="p-3 g-col-6">
                    <div class="col">
                        <input
                            type="text"
                            class="form-control"
                            placeholder="Correo"
                            aria-label="Correo"
                        />
                    </div>
                    <div class="p-3 g-col-6">
                        <div class="col">
                            <input
                                type="number"
                                class="form-control"
                                placeholder="Numero"
                                aria-label="Numero"
                            />
                        </div>
                    </div>
                </div>
            </div>
            <div class="p-3 g-col-6">
                <textarea
                    class="form-control"
                    id="exampleFormControlTextarea1"
                    placeholder="Descripcion"></textarea>
            </div>
            <div class="text-center">  
            <button type="button" class="btn btn-outline-warning n btn-lg">Enviar</button
            >
        </div>
        </form>
    </div>
</div>
